<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:orientation="vertical"
    android:id="@+id/cardview_berita"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBerita"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:translationZ="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:id="@+id/gambarBerita"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
            </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginRight="@dimen/_5sdp"
                android:maxLines="2"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleBerita"
                android:textColor="@color/black"
                android:text="JudulBerita"/>

                <TextView
                    android:textColor="#FA6C6C6C"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tanggalBerita"
                    android:text="22-12-2021"/>




        </LinearLayout>
    </LinearLayout>
</LinearLayout>